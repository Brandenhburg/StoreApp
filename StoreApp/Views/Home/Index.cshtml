                    <h1>Learn And Create</h1>
                    <p class="d-none d-md-flex">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. 
                        Quas tenetur soluta quasi exercitationem repudiandae sapiente esse laudantium voluptatum nam at.
                    </p>
                </div>
            </div>
            <div class="d-none col-lg-3 d-lg-block">
                <img src="/img/pexel3861958.jpg" alt="" class="img-fluid rounded-circle" />
            </div>
        </div>
</section>

<section id="section-bottom" class="container-fluid p-3">
        <div class="row">
            @foreach (Product p in Model)
            {
                @(await Html.PartialAsync("BookCardPartial", p))
            }
        </div>
</section>

