@model IEnumerable<Product>

@{ 
    Layout = "_Layout";
}

@await Html.PartialAsync("_CarouselPartial");

<section id="sectionTop" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4 text-lg-center">
                <i class="fas fa-book fa-4x"></i>
                <a href="#" class="text-dark"><h4>Discover Our Library</h4></a>
                <p></p>
            </div>
            <div class="col-md-4 mb-4 text-lg-center">
                <i class="fas fa-caret-right fa-4x"></i>
                <a href="#" class="text-dark"><h4>Get Subscription</h4></a>
                <p></p>
            </div>
            <div class="col-md-4 mb-4 text-lg-center">
                <i class="fas fa-mobile-alt fa-4x"></i>
                <a href="#" class="text-dark"><h4>Contact Us</h4></a>
