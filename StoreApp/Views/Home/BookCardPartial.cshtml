@model Product
<div class="col-md-6 col-lg-3">
    <div class="card">
        <div class="p-1">
            <img src="/img/pexels2908773.jpg" alt="Alternate Text" />
            <div id="bookDetails" class="p-1">
                <div id="bookName" class="mt-4 mb-4">
                    <p>@Model.Name</p>
                </div>
                <h5 class="mt-4">Price: @Model.Price</h5>
            </div>
            <button class="btn btn-outline-secondary btn-sm">See Details</button>
        </div>
    </div>
</div>