<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <div class="container">
                <h1 class="navbar-brand"><i class="fa fa-book-open"></i>  Welcome to BookStore</h1>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#navigationBar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navigationBar" class="navbar-collapse collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Store" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>


    @*Footer*@

    <div id="topFooter">
        <button class="btn btn-outline-secondary m-4">Register</button>
        <button class="btn btn-outline-secondary m-4"> Log In </button>
    </div>

    <footer id="theFooter">
        <div class="row offset-md-3">
            <div class="col-md-2">
                <div class="text-white mb-2">About Us</div>
                <a href="#" class="f-element">About</a><br />
                <a href="#" class="f-element">Careers</a><br />
                <a href="#" class="f-element">Business Contacts</a><br />
                <a href="#" class="f-element">Terms</a><br />
                <a href="#" class="f-element">Anouncements</a><br />
                <a href="#" class="f-element">News</a><br />
            </div>
            <div class="col-md-2">
                <div class="text-white mb-2">Products</div><br />
                <a href="#" class="f-element">Store</a><br />
                <a href="#" class="f-element">Subscription</a><br />
            </div>
            <div class="col-md-2">
                <div class="text-white mb-2">Community</div>
                <a href="https://github.com/Brandenhburg" class="f-element" target="_blank"><i class="fab fa-github"></i></a>
                <a href="https://medium.com/" class="f-element"><i class="fab fa-medium"></i></a>
                <a href="https://www.youtube.com/" class="f-element"><i class="fab fa-youtube"></i></a>
                <a href="https://twitter.com/?lang=en" class="f-element"><i class="fab fa-twitter"></i></a>
                <a href="https://www.facebook.com/" class="f-element"><i class="fab fa-facebook"></i></a>
                <a href="https://www.instagram.com/?hl=en" class="f-element"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div id="bottomFooter" class="mt-5">
            <h6 class="f-element">&#169 localhost:5001/ All rights reserved</h6>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
